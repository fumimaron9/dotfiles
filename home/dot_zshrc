########## hooks
DISABLE_AUTO_TITLE="true"
function precmd_set_tab_title() {
  # sets the tab title to current dir
  echo -ne "\e]1;${PWD##*/}\a"
}
autoload -Uz "add-zsh-hook"
add-zsh-hook "precmd" "precmd_set_tab_title"



