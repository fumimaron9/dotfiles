{
  "tools": {
    "autoAccept": false,
    "exclude": [
      "ShellTool(rm -rf)",
      "ShellTool(sudo dd)",
      "ShellTool(sudo mkfs)",
      "ShellTool(sudo fdisk)",
      "ShellTool(sudo mount)",
      "ShellTool(sudo umount)",
      "ShellTool(dd)",
      "ShellTool(mkfs)",
      "ShellTool(fdisk)",
      "ShellTool(chmod 777 /*)",
      "ShellTool(chown root)",
      "ShellTool(sudo chmod 777)",
      "ShellTool(sudo chown)",
      "ShellTool(sudo -i)",
      "ShellTool(sudo su)",
      "ShellTool(docker system prune -af)",
      "ShellTool(git push)"
    ],
    "sandbox": true,
    "discoveryCommand": "",
    "callCommand": ""
  },
  "general": {
    "checkpointing": {
      "enabled": false
    },
    "preferredEditor": "vim",
    "vimMode": false,
    "previewFeatures": true,
    "sessionRetention": {
      "enabled": true,
      "maxAge": "14d",
      "maxCount": 20
    }
  },
  "context": {
    "fileFiltering": {
      "respectGitIgnore": true,
      "enableRecursiveFileSearch": false
    },
    "fileName": [
      "GEMINI.md",
      "AGENTS.md"
    ],
    "includeDirectories": [
      "~/.gemini/extensions/ralph"
    ]
  },
  "ide": {
    "hasSeenNudge": true,
    "enabled": true
  },
  "ui": {
    "hideTips": true,
    "hideBanner": true,
    "theme": "Default",
    "showStatusInTitle": true,
    "showMemoryUsage": true
  },
  "model": {
    "maxSessionTurns": -1,
    "summarizeToolOutput": {}
  },
  "security": {
    "auth": {
      "selectedType": "oauth-personal"
    }
  },
  "telemetry": {
    "enabled": false,
    "target": "local",
    "otlpEndpoint": "http://localhost:4317",
    "logPrompts": true
  },
  "privacy": {
    "usageStatisticsEnabled": true
  },
  "useWriteTodos": true,
  "experimental": {
    "skills": true,
    "enableAgents": true,
    "plan": true
  }
}
